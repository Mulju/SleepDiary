<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Valikko">

    <Button
        android:id="@+id/button_asetukset"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:text="@string/button_asetukset"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_unigraafi" />

    <Button
        android:id="@+id/button_unigraafi"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:text="@string/button_unigraafi"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_asetukset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_unesi" />

    <Button
        android:id="@+id/button_unesi"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:text="@string/button_unesi"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_unigraafi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_kerroyo" />

    <Button
        android:id="@+id/button_kerroyo"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:text="@string/buttton_kerroyo"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_unesi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>